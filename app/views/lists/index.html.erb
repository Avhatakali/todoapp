<h4>todo list</h4>

<%= link_to 'new', new_list_path %>


<table>
      <tr>
          <th>List_Name</th>
          <th>Description</th>
      </tr>

      <% @lists.each do |list| %>
            <tr>
                  <td><%= list.name %></td>
                  <td><%= list.description %></td>
                  <td><%= link_to 'show', list_path(list) %></td>
                  <td><%= link_to 'Add task', new_list_task_path(list) %></td>
                  <td><%= link_to 'edit', edit_list_path(list) %></td>
                  <td><%= link_to 'done' %></td>
            </tr>
      <% end %>
</table>
